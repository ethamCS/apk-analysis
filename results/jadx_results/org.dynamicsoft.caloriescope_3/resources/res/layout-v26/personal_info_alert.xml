<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText android:id="@+id/PersonName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/PersonName" android:inputType="text" android:autofillHints="@string/PersonName"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/GenderRadioGroup" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/RadioBtnMale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Male"/>
        <RadioButton android:id="@+id/RadioBtnFemale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Female" android:layout_marginStart="30sp"/>
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/news_country" android:paddingStart="5dp" android:paddingEnd="5dp"/>
        <EditText android:id="@+id/CountryCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/for_ex_us" android:inputType="text" android:autofillHints="@string/for_ex_us"/>
    </LinearLayout>
    <TextView android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/note_to_be_able_to_access_videos_please_enter_your_youtube_data_v3_api_key_in_the_settings"/>
</LinearLayout>
