<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/layout" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:gravity="center" android:id="@+id/splash" android:background="@android:color/transparent" android:padding="0dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/app_name"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/splash_default" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/app_icon" android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/notes" android:contentDescription="@string/app_name"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="22sp" android:textStyle="bold" android:id="@+id/text" android:background="@android:color/transparent" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/app_name"/>
            <TextView android:textSize="14sp" android:id="@+id/url" android:background="@android:color/transparent" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/app_url"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
