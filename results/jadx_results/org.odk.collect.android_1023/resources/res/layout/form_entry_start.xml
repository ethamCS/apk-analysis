<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:gravity="center_vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/form_start_bling" android:paddingBottom="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:contentDescription="@+id/description"/>
        <TextView android:textSize="21sp" android:textStyle="bold" android:gravity="center" android:layout_gravity="center" android:id="@+id/description" android:paddingTop="10dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/form_start_bling" android:layout_centerHorizontal="true" android:lineSpacingMultiplier="1.2"/>
        <ImageView android:gravity="left" android:id="@+id/image_backup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/backup" android:layout_below="@+id/description" android:layout_alignParentLeft="true" android:contentDescription="@string/backup"/>
        <TextView android:textSize="21sp" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/backup" android:layout_below="@+id/image_backup" android:layout_alignParentLeft="true"/>
        <ImageView android:gravity="right" android:id="@+id/image_advance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/advance" android:layout_below="@+id/description" android:layout_alignParentRight="true" android:contentDescription="@string/advance"/>
        <TextView android:textSize="21sp" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/advance" android:layout_below="@+id/image_advance" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</ScrollView>
