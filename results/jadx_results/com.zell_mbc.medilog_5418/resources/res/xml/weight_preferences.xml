    <PreferenceCategory android:title="@string/chart">
        <SwitchPreference android:title="@string/showThresholds" android:key="cbShowWeightThreshold" android:summary="@string/showThresholdsSummary" android:defaultValue="@string/SHOW_WEIGHT_THRESHOLD_DEFAULT"/>
