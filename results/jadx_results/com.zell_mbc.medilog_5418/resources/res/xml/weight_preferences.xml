        <EditTextPreference android:text="kg" android:singleLine="true" android:selectAllOnFocus="true" android:title="@string/unit" android:key="etWeightUnit" android:summary="@string/weightUnitSummary" android:defaultValue="@string/WEIGHT_UNIT_DEFAULT"/>
        <SwitchPreference android:title="@string/logBodyFat" android:key="cbLogBodyFat" android:summary="@string/logBodyFatSummary" android:defaultValue="@string/LOG_FAT_DEFAULT"/>
