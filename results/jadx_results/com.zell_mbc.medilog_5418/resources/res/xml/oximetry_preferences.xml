<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"> xmlns:app=&quot;http://schemas.android.com/apk/res-auto&quot;&gt; 
    <PreferenceCategory android:title="@string/general">
        <EditTextPreference android:text="@string/OXIMETRY_THRESHOLDS_DEFAULT" android:selectAllOnFocus="true" android:title="@string/threshold" android:key="etOximetryThresholds" android:summary="@string/thresholdSummaryLower" android:defaultValue="@string/OXIMETRY_THRESHOLDS_DEFAULT" android:inputType="text"/>
        <SwitchPreference android:title="@string/showTime" android:key="swOximetryShowtime" android:summary="@string/showTimeSummary" android:defaultValue="@string/SHOWTIME_DEFAULT"/>
        <SwitchPreference android:title="@string/highlightValues" android:key="cbOximetryHighlightValues" android:summary="@string/highlightValuesSummaryLow" android:defaultValue="@string/OXIMETRY_HIGHLIGHT_VALUES_DEFAULT"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/actionPDF">
        <SwitchPreference android:title="@string/landscapeOrientation" android:key="cbOximetryLandscape" android:summary="@string/landscapeOrientationSummary" android:defaultValue="false"/>
        <ListPreference android:entries="@array/paperSizes" android:title="@string/paperSize" android:key="liOximetryPaperSize" android:summary="@string/paperSizeSummary" android:defaultValue="A4" android:entryValues="@array/paperSizes"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/chart">
        <SwitchPreference android:title="@string/showThresholds" android:key="cbShowOximetryThresholds" android:summary="@string/showThresholdsSummary" android:defaultValue="true"/>
        <SwitchPreference android:title="@string/showGrid" android:key="cbShowOximetryGrid" android:summary="@string/showGridSummary" android:defaultValue="@string/OXIMETRY_SHOW_GRID_DEFAULT"/>
        <SwitchPreference android:title="@string/showLegend" android:key="cbShowOximetryLegend" android:summary="@string/showLegendSummary" android:defaultValue="@string/OXIMETRY_SHOW_LEGEND_DEFAULT"/>
    </PreferenceCategory>
</PreferenceScreen>
