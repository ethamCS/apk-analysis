<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:id="@+id/tvDateLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/date" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="18sp" android:id="@+id/etDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/tvDateLabel" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="18sp" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/time" android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/etDate" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="18sp" android:id="@+id/etTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/tvTime" app:layout_constraintTop_toTopOf="0"/>
