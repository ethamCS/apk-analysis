    <TextView android:textSize="18sp" android:id="@+id/tvDia" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/diastolic" android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/tvSys" app:layout_constraintTop_toBottomOf="@+id/tvDateLabel"/>
    <EditText android:id="@+id/etDia" android:nextFocusDown="@+id/etPulse" android:layout_width="wrap_content" android:layout_height="45dp" android:hint="@string/bpEntryHint" android:ems="3" android:maxLength="3" android:inputType="numberDecimal" android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/tvSys" app:layout_constraintTop_toBottomOf="@+id/tvDia"/>
    <TextView android:textSize="18sp" android:id="@+id/tvPulse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/pulse" android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/tvDia" app:layout_constraintTop_toBottomOf="@+id/tvDateLabel"/>
